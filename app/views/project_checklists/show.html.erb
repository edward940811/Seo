<% @global = ProjectChecklistDecorator.new @project_checklist %>
<% @local = @global.checklist %>

<div class="row"> 
   <div class="col-md-11 col-md-offset-1">
      <div class="panel panel-default" style="width: 80%; background-color:rgba(255,255,255,0.8)">
          <div class="panel panel-body">
            <h2> <%= @local.title %> </h2>
            <p> what it is about: <%= @local.description %> <p>
            <p> comments: <%= @global.description %> <p>
            <p> status: <%= @global.status %> <p>
          </div>
      </div>
   </div>
</div>
