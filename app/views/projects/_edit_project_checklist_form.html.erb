  <%= form_for @project_checklist, url: edit_project_checklist_path(@project , @project_checklist), method: :put, remote: true do |f| %>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, name: 'checklist[description]' %>
  </div>

  <div class="field">
    <%= f.label :status %><br>
    <%= f.check_box :status %>
  </div>

